<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF00EEFF"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF00"
        android:orientation="vertical" >

        <com.pangff.wjw.view.TitleBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleBarHeight"
            titlebar:canBack="true"
            titlebar:title="@string/regist" />

        <EditText
            android:id="@+id/tureNameE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="真实姓名" />

        <EditText
            android:id="@+id/vipNameE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="会员姓名" />

        <EditText
            android:id="@+id/phoneNumberE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机号码" />

        <EditText
            android:id="@+id/spreadNumberE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推广编号" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textStyleT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="区域:" />

            <Spinner
                android:id="@+id/spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </Spinner>
        </LinearLayout>

        <EditText
            android:id="@+id/loginPasswordE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录密码" />

        <EditText
            android:id="@+id/checkPasswordE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查看密码" />

        <EditText
            android:id="@+id/payPasswordE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="支付密码" />

        <EditText
            android:id="@+id/aPayPasswordE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="激活人支付密码" />

        <EditText
            android:id="@+id/aPersonNumberE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="激活人编号" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textStarT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="级别:" />

            <Spinner
                android:id="@+id/spinnerStar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </Spinner>
        </LinearLayout>
        <!-- </LinearLayout> -->

        <Button
            android:id="@+id/registerB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="注册" />
    </LinearLayout>

</ScrollView>